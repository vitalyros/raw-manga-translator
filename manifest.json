{
    "manifest_version": 2,
    "name": "raw manga translator",
    "version": "1.0",
  
    "description": "raw manga translator",

    "browser_specific_settings": {
      "gecko": {
      "id": "romatora@vitaly",
      "strict_min_version": "0.0.1"
      }
    },

    "browser_action": {
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["dist/page.js"]
      }
    ],

    "permissions": [
      "<all_urls>",
      "activeTab",
      "menus",
      "storage"
    ],

    "background": {
      "scripts": ["dist/background.js"]
    },

    "web_accessible_resources": [
      "dist/*",
      "lang/*",
      "node_modules/*"
    ]
  }